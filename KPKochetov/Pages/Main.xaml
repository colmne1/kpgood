<Page x:Class="KPKochetov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KPKochetov.Pages"
            mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
            Title="Main">

    <Grid Background="#74B8C3">
        <Grid.Resources>
            <ResourceDictionary Source="/Resource/Dictionary.xaml"/>
        </Grid.Resources>
        <Grid Margin="0,0,0,0" VerticalAlignment="Top" Height="60" Grid.ColumnSpan="2">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="31" Direction="260" Color="#FFC1C1C1" ShadowDepth="0"/>
            </Grid.Effect>
            <Border CornerRadius="00,00,00,00" Margin="0,0,0,0">
                <Border.Background>
                    <SolidColorBrush Color="#00A6C0" Opacity="1.0"/>
                </Border.Background>
            </Border>
            <Image Source="/Images/street.png" Margin="19,8,0,0" HorizontalAlignment="Left" Width="41" Height="42" VerticalAlignment="Top"/>
            <TextBox x:Name="Search" Style="{StaticResource BaseBox}" Height="35" Background="#FFDEDEDE" Margin="180,12.5,500,0" VerticalAlignment="Top" Text="Поиск" TextChanged="SearchTextChanged" LostFocus="TextBox_LostFocus" GotFocus="TextBox_GotFocus" IsEnabled="False"/>
            <Label x:Name="WhoAmI" Content="" Margin="0,10,10,0" HorizontalAlignment="Right" Height="38" VerticalAlignment="Top" Foreground="#3DAEFF" FontSize="20" FontFamily="Yu Gothic UI Semibold" VerticalContentAlignment="Center"/>
        </Grid>
        <Grid Margin="10,71,10,0" Height="51" VerticalAlignment="Top">
            <StackPanel x:Name="list_move" Orientation="Horizontal">
                <Border x:Name="parts_itms" Margin="5,3,10,0" Height="45" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" MouseDown="Click_Garage" Padding="7,7,7,7" Cursor="Hand">
                    <Grid Height="30">
                        <Image Source="/Images/garage.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="Гаражи" Margin="44,0,0,0" Foreground="#3DAEFF" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" FontWeight="Bold"/>
                    </Grid>
                </Border>
                <Border x:Name="ceh_itms" Margin="5,3,0,0" Height="45" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" MouseDown="Click_Ceh" Padding="7,7,7,7" Cursor="Hand">
                    <Grid Height="30">
                        <Image Source="/Images/workshop.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="Цеха" Margin="44,0,0,0" Foreground="#3DAEFF" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="30"  VerticalAlignment="Top" FontWeight="Bold"/>
                    </Grid>
                </Border>
                <Border x:Name="Voditel_itms" Margin="15,3,0,0" Height="45" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" MouseDown="Click_Voditel" Padding="7,7,7,7" Cursor="Hand">
                    <Grid Height="30">
                        <Image Source="/Images/driver.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="Водители" Margin="44,0,0,0" Foreground="#3DAEFF" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="30"  VerticalAlignment="Top" FontWeight="Bold"/>
                    </Grid>
                </Border>
                <Border x:Name="technique_itms" Margin="15,3,0,0" Height="45" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" MouseDown="Click_Technique" Padding="7,7,7,7" Cursor="Hand">
                    <Grid Height="30">
                        <Image Source="/Images/car.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="Техника" Margin="44,0,0,0" Foreground="#3DAEFF" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="30"  VerticalAlignment="Top" FontWeight="Bold"/>
                    </Grid>
                </Border>
                <Border x:Name="typeOfTroops_itms" Margin="15,3,0,0" Height="45" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" MouseDown="Click_Type_of_troops" Padding="7,7,7,7" Cursor="Hand">
                    <Grid Height="30">
                        <Image Source="/Images/wrench.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="Запчасти" Margin="44,0,0,0" Foreground="#3DAEFF" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="30"  VerticalAlignment="Top" FontWeight="Bold"/>
                    </Grid>
                </Border>

                <Border Margin="15,3,0,0" Height="45" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" Background="AliceBlue" MouseDown="Click_Export" Padding="7,7,7,7" Cursor="Hand">
                    <Grid Height="30">
                        <Image Source="/Images/Export.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="Экспорт" Margin="44,0,0,0" Foreground="#FF2C2C2C" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" FontWeight="Bold"/>
                    </Grid>
                </Border>
                <Border Margin="15,3,0,0" Height="45" CornerRadius="5,5,5,5" Style="{StaticResource Grid_Itm_Anim}" Background="#FFE48F2B" MouseDown="Click_Back" Padding="7,7,7,7" Cursor="Hand">
                    <Grid Height="30">
                        <Image Source="/Images/back.png" Margin="5,0,0,0" HorizontalAlignment="Left" Width="29" Height="30" VerticalAlignment="Top"/>
                        <Label Content="Назад" Margin="44,0,0,0" Foreground="#FF2C2C2C" FontSize="15" FontFamily="Corbel" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" FontWeight="Bold"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
        <Border Margin="10,133,10,10" CornerRadius="15,15,15,15">
            <Border.Background>
                <SolidColorBrush Color="#84E3F2" Opacity="1.0"/>
            </Border.Background>
            <Grid MinHeight="457">
                <ScrollViewer x:Name="scroll_main">
                    <StackPanel x:Name="parrent"/>

                </ScrollViewer>
                <Frame x:Name="frame_main" NavigationUIVisibility="Hidden" Visibility="Hidden" Opacity="0"/>
            </Grid>
        </Border>
    </Grid>
</Page>
